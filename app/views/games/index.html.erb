
<!DOCTYPE html>
<html>

<head>
    <style type="text/css">
      html, body, #map-canvas { height: 100%; margin: 0; padding: 0;}
    </style>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCXgnWnrHcxQ0i1E9k2cWmfC_mRzwru97A">
    </script>
    <script type="text/javascript">
      function initialize() {
        var mapOptions = {
          center: { lat: 41.87811, lng: -87.62980},
          zoom: 11
        };
        var map = new google.maps.Map(document.getElementById('map-canvas'),
            mapOptions);
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  </head>

	
	<body>
		
		<div id="map-canvas"></div>

		<h1> List of Current Games </h1>

		<div class="row">
		<% @games.each do |game| %>

		<div class="column">
		 
		  	<p>15&nbsp;Game:<%= game.title %></p>
		  	<p>15&nbsp;Status:<%= game.status %></p>
		  	<p>15&nbsp;User:<%= game.user.email %></p>
		  	
		<% end %>
		

			<a href="<%= @link %>">Home</a>
		  </br>
			<a href="<%= @link %>games/mygame">My Game</a>
			</br>
			<a href="<%= @link %>games/new">Create a new game</a>
		   </br>

			<% if user_signed_in? %>

			  <a href="http://users/sign_in">Sign Out</a>

			<% else %>

				<a href="http://users/sign_in">Sign In</a>
				<a href="http://users/sign_up">Sign Up</a>

 
			<% end %>






		  
		  
	</body>
</html>


